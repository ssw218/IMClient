<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/contact_people_photo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/cat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/contact_people_photo"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/contact_people_textview_name"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Mao" />
        
        <TextView
            android:id="@+id/contact_people_textview_introduce"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="[online]I am a cat" />
        
    </LinearLayout>

</RelativeLayout>