<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Toolbar
        android:id="@+id/chat_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#aaa" />

    <com.lyk.imclient.ui.view.ChatViewLayout
        android:id="@+id/layout_activity_chat_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chat_back"
        android:orientation="vertical" />

    <Button
        android:id="@+id/button_activity_chat_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Enter" />

    <EditText
        android:id="@+id/edittext_activity_chat_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/button_activity_chat_send"
        android:text="Enter text" />

</RelativeLayout>